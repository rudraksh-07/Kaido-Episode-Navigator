{
    "manifest_version": 3,
    "name": "Kaido.to Episode Navigator",
    "version": "1.0",
    "description": "Navigate Kaido.to episodes using Shift+P and Shift+N.",
    "permissions": ["scripting", "activeTab"],
    "host_permissions": ["https://kaido.to/*"],
    "background": {
      "service_worker": "background.js"
    },
    "content_scripts": [
      {
        "matches": ["https://kaido.to/*"],
        "js": ["content.js"]
      }
    ],
    "icons": {
      "16": "icons/icon16.webp",
      "48": "icons/icon48.webp",
      "128": "icons/icon128.webp"
    }

      
    
  }


  